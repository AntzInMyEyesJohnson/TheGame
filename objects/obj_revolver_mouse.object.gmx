        if (obj_gunslinger.lockedon){
            image_alpha = 1;
            image_blend = c_red;
            //when in range
            if (nth_nearest_dist &lt; 240 and TheyHaveLineOfSightTo(obj_gunslinger,nth_nearest_enemy)){ 
                image_angle = 0;
                //lock position to the nearest enemy
                x = nth_nearest_enemy.x;
                y = nth_nearest_enemy.y;
                //set actual mouse cursor position so that mouse stays in this position
                //display_mouse_set(x,y);
                //if player wants the next enemy then cycle to next enemy
                if (ability_keyp){
                    nth_enemy += 1;
                }
            } else { //no enemies in range
                nth_enemy = 1;
                x = mouse_x;
                y = mouse_y;
            }
        } else {//gunslinger not using his ability
            image_alpha = .8;
            image_blend = c_white;
            image_angle = 0;
            //reset to the closest enemy
            nth_enemy = 1;
            //set position to the mouse
            x = mouse_x;
            y = mouse_y;
