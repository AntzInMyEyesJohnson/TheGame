            <string>///control shield direction
if instance_exists(creator){
    //follow mouse
    img_index = round(point_direction(x,y,obj_mouse.x,obj_mouse.y)/90);
    if (img_index == 1){
        //set depth behind the player
        depth = creator.depth+1;
    } else {
        //set depth in front of player
        depth = creator.depth-1;
    }
    
    if (creator.state == 'deflect'){
        //follow creator but push out for deflect effect
        x = creator.x+lengthdir_x(12,img_index*90);
        y = creator.y+lengthdir_y(12,img_index*90);
    } else if (creator.state == 'shield'){
        //follow creator
        x = creator.x+lengthdir_x(3,img_index*90);
        y = creator.y+lengthdir_y(3,img_index*90);
    }
    
    //add 5 when shield is damaged because the next set of shield sprites are 5 images in front of them
    if (creator.shield_health &lt;= 4){
        img_index += 5;
    }
    
    //set image_index 
    image_index = img_index;

    //destroy if no longer in the shield state
    if (creator.state != 'shield' and creator.state != 'deflect'){
        instance_destroy();
    }
} else {
    instance_destroy();
}
</string>
